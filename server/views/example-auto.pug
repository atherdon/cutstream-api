extends layout-ex

block content

    

  .wrapper
    .header.header-filter(style="background-image: url('" + img + "');")
      .container
        .row



          .col-md-6

            h1.title= title

            if description[0]
              h4= description[0]
            br

            a.btn.btn-danger.btn-raised.btn-large(href='' + url) Watch Video 
              .icon
                i.material-icons play_arrow
                
                      


    .main.main-raised
        
           
        .container
          .section.section-landing 

            .row
              .col-sm-8.col-md-offset-2

                if description[1]	
                  h2.title= description[1]

                if description[2]	  
                  h5.description= description[2]

                ul(style="line-height: 28px;")
                  each value in videos
                    li(style="font-size:18px;") #{value.text}
                      a(href="' + value.link + '")  #{title}


        .space-50

        

    footer.footer
      .container
    